{% if tagListItems.length %}
  <section class="[ post-list ] [ pad-top-700 gap-bottom-900 ]">
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <h2 class="[ post-list__heading ] [ text-700 md:text-800 ]">{{ tagListHeading }}</h2>
      <p class="[ sf-flow ] [ pad-top-300 ]">
        {% set sortedTagList = tagListItems | sort %}
        {% for item in sortedTagList %}
            <a href="/blog/tags/{{ item | slug}}">{{ item }}</a>
        {% endfor %}
      </p>
    </div>
  </section>
{% endif %}
